
    .viewport {
      position: relative;
      overflow: hidden;
    }

    .scrollable {
      position: absolute;
      left: 0;
      bottom: 0;
      width: 100%;
      height: 100px;
      overflow: auto;
      overflow-x: scroll;
      overflow-y: hidden;
    }

    .content {
      height: 1px;
    }
  